<div class="container">
  <div class="row">
    <div class="col m-10">
      <p id="notice"></p>
        <h3><strong>会員情報編集</strong></h3>
          <%= form_with model: @user, url: public_user_path(@user) do |f| %>

              <table class="row table" id="table">

                <tr>
                  <th><%= f.label :画像 %></th>
                  <th><%= f.file_field :profile_image %></th>
                  <th></th>
                </tr>

                <tr>
                  <th><%= f.label :ユーザーネーム %></th>
                  <th><%= f.text_field :first_name, class:"form-control" %></th>
                  <th><%= f.text_field :last_name, class:"form-control" %></th>
　　　　　　　　</tr>

                <tr>
                  <th><%= f.label :フリガナ %></th>
                  <th><%= f.text_field :first_name_kana, class:"form-control" %></th>
                  <th><%= f.text_field :last_name_kana, class:"form-control" %><br></th>
                </tr>

                <tr>
                  <th><%= f.label :年齢 %></th>
                  <td><%= f.select :age, [[15, 15], [16, 16], [17, 17], [18, 18], [19, 19], [20, 20], [21, 21],[22, 22], [23, 23], [24, 24], [25, 25], [26, 26], [27,27], [28,28], [29,29], [30,30], [31, 31], [32,32], [33,33], [34,34], [35, 35], [36,36], [37,37], [38,38], [39,39], [40,40], [41,41], [42,42], [43,43], [44,44], [45,45], [46,46,], [47,47],[48,48],[49,49],[50,50],[51,51],[52,52],[53,53],[54,54],[55,55],[56,56],[57,57],[58,58],[59,59],[60,60],[61,61],[62,62],[63,63],[64,64],[65,65],[66,66],[67,67],[68,68],[69,69],[70,70],[71,71],[72,72],[73,73],[74,74],[75,75],[76,76],[77,77],[78,78],[79, 79], [80, 80], [81, 81], [82, 82], [83, 83], [84, 84], [85, 85], [86, 86], [87, 87], [88, 88], [89, 89], [90, 90]] %></td><th></th>
                </tr>

                <tr>
                  <th><%= f.label :自己紹介 %></th>
                  <td><%= f.text_area :introduction, class:"form-control" %></td><th></th>
                </tr>

                <tr>
                  <th><%= f.label :メールアドレス %></th>
                  <td><%= f.text_field :email , class:"form-control"%></td><th></th>
                </tr>

                <div class="form-group">
                    <th><input type="submit" name="commit" value="編集内容を保存" class="btn btn-outline-info" data-disable-with="Update Genre"></th>
                    <td><%= link_to '変更を破棄', public_user_path(@user), class: "btn btn-outline-warning" %></td>
                    <th>
                        <%= link_to public_users_unsubscribe_path(current_user) do %>
                         <button type="button" class="btn btn-outline-danger">退会する</button>
                        <% end %>
                    </th>    
                </div>
              </table>
          <% end %>

    </div>
  </div>
</div>

<style>
  #table{
    color: white;
  }
</style>