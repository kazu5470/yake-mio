<% if user_signed_in? %>
    <% if post.favorited_by?(current_user) %>
        <p>
          <%= link_to public_post_favorites_path(post), remote: true, method: :delete do %>
            <%= image_tag "nightview-on.jpeg", size: "40x40" %><%= post.favorites.count %> いいね
          <% end %>
        </p>
    <% else %>
        <p>
          <%= link_to public_post_favorites_path(post), remote: true, method: :post do %>
            <%= image_tag "nightview-off.jpeg", size: "40x40" %><%= post.favorites.count %> いいね
          <% end %>
        </p>
    <% end %>    
<% else %>
    <%= image_tag "nightview-on.jpeg", size: "40x40" %><%= post.favorites.count %> いいね
<% end %>  